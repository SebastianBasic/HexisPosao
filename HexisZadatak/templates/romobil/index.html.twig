{% extends 'base.html.twig' %}

{% block body %}
  <h1 style="text-align: center">Evidencija romobila</h1>

  <div class="container">
    <div style="width:500px; margin:auto; margin-top: 30px">
      <div class="row" style="margin: 10px">
        <a class="btn btn-success" href="{{path('romobil.create')}}">Unos novog vozila</a>
      </div>
      <div class="row" style="margin: 10px">
        <a class="btn btn-success" href="{{path('zauzece.view')}}">Zauzimanje vozila</a>
      </div>
    </div>

  {% for message in app.flashes('success') %}
    <div class="alert alert-success">
      {{message}}
    </div>
  {% endfor %}

  <table class="table table-striped">
      <thead>
        <tr>
          <td>Sifra</td>
          <td>Tip</td>
          <td>Broj putnika</td>
          <td>Marka</td>
          <td>Status</td>
          <td>Akcija</td>
        </tr>
      </thead>
      <tbody>
        {% for romobil in romobili %}
          <tr>
            <td>{{romobil.sifra}}</td>
            <td>{{romobil.tip}}</td>
            <td>{{romobil.brojPutnika}}</td>
            <td>{{romobil.marka}}</td>
            <td>
              {% if romobil.status == true %}
                Zauzet
              {% else %}
                Slobodan
              {% endif %}
            </td>
            <td>
              <a class="btn btn-warning" href="{{path('romobil.update', {id: romobil.id})}}"><i class="fa fa-edit"></i> Uredi</a>
              <a class="btn btn-danger" href="{{path('romobil.delete', {id: romobil.id})}}"><i class="fa fa-delete"></i> Obri≈°i</a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
  </table>

    <a class="btn btn-success" href="{{path('home')}}">Natrag</a>
  </div>
{% endblock %}
