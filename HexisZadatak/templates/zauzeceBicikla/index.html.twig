{% extends 'base.html.twig' %}

{% block body %}
  <h1 style="text-align: center">Evidencija zauzeća bicikala</h1>

  <div class="container">
  <div class="card">
    <div class="card-body">
      <div class="row" style="margin: 10px">
        <button class="btn btn-success"><a href="{{path('zauzeceBicikla.create')}}">Unos novog zauzeća</a></button>
      </div>
    </div>
  </div>

  {% for message in app.flashes('success') %}
    <div class="alert alert-success">
      {{message}}
    </div>
  {% endfor %}

  <table class="table table-striped">
      <thead>
        <tr>
          <td>Datum zauzeća</td>
          <td>Period</td>
          <td>Datum isteka zauzeća</td>
          <td>Bicikl</td>
          <td>Action</td>
        </tr>
      </thead>
      <tbody>
        {% for zauzece in zauzeca %}
          <tr>
            <td>{{zauzece.datumZauzeca.format('d/m/Y')}}</td>
            <td>{{zauzece.period.format('%d days')}}</td>
            <td>{{zauzece.datumIsteka.format('d/m/Y')}}</td>
            <td>{{zauzece.bicikl}}</td>
            <td><a href="{{path('zauzeceBicikla.update', {id: zauzece.id})}}">uredi</a></td>
            <td><a href="{{path('zauzeceBicikla.delete', {id: zauzece.id})}}">obriši</a></td>
          </tr>
        {% endfor %}
      </tbody>
  </table>

    <button class="btn btn-success"><a href="{{path('bicikl.view')}}">Natrag</a></button>
  </div>
{% endblock %}
